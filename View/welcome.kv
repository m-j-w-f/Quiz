<WelcomeWindow>:
    name: "welcomeW"
    numberR: numberR

    GridLayout:
        cols:1
        GridLayout:
            cols: 2

            Label:
                text: "Number of Rounds:"
            TextInput:
                id: numberR
                multiline: False

        Button:
            text:"Play!"
            on_release:
                root.startGame()
                root.manager.transition.direction = 'up'

<PlayerWindow>:
    name: "playerW"
    inpP: inpP

    GridLayout:
        cols: 2

        Label:
            text:"Enter name of Player:"

        TextInput:
            name: "asdasd"
            id: inpP
            multiline: False

        Button:
            text: "New Player"
            on_release:
                root.createPlayer()



        Button:
            text: "Start Game"
            on_release:
                root.startGame()
                root.manager.current = "categoryW"

<CategoryWindow>:
    name: "categoryW"
    category: category
    difficulty: difficulty

    GridLayout:
        cols: 1
        Label:
            text: root.currentPlayer

        Spinner:
            id: category
            text: "Select Category"
            values: root.categories
        GridLayout:
            cols: 2
            Label:
                text: "Difficulty"
            Spinner:
                id: difficulty
                text: "Select Difficulty"
                values: ["easy", "medium", "hard"]

        Button:
            text: "Continue"
            on_release:
                root.setCategory()
                root.manager.current = "questionW"

<QuestionWindow>:
    name: "questionW"
    questionL: questionL


    GridLayout:
        cols:1

        Label:
            id: questionL
            text: root.questionText

        GridLayout:
            cols:2

            Button:
                id: answerA
                text:   root.answerA
                background_color: (1,0,0,1)
                background_normal: ""
                background_down:"darkgrey.jpg"
                on_release: root.answeredA()
            Button:
                id: answerB
                text:   root.answerB
                background_color: (255/255, 158/255, 23/255,1)
                background_normal: ""
                background_down:"darkgrey.jpg"
                on_release: root.answeredB()
            Button:
                id: answerC
                text:   root.answerC
                background_color: (0/255, 148/255, 69/255,1)
                background_normal: ""
                background_down:"darkgrey.jpg"
                on_release: root.answeredC()
            Button:
                id: answerD
                text:   root.answerD
                background_color: (0/255, 25/255, 148/255,1)
                background_normal: ""
                background_down:"darkgrey.jpg"
                on_release: root.answeredD()

<GameOverWindow>:
    name: "gameOverW"
    txtW: txtW
    Label:
        id: txtW
        text: "Winner:"