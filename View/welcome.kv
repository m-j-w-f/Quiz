<WelcomeWindow>:
    name: "welcomeW"
    numberR: numberR

    GridLayout:
        cols:1
        GridLayout:
            cols: 2

            Label:
                text: "Number of Rounds:"
            TextInput:
                id: numberR
                multiline: False

        Button:
            text:"Play!"
            on_release:
                root.startGame()
                root.manager.transition.direction = 'up'

<PlayerWindow>:
    name: "playerW"
    inpP: inpP

    GridLayout:
        cols: 2

        Label:
            text:"Enter name of Player:"

        TextInput:
            name: "asdasd"
            id: inpP
            multiline: False

        Button:
            text: "New Player"
            on_release:
                root.createPlayer()

        Button:
            text: "Start Game"
            on_release:
                root.startGame()
                root.manager.current = "categoryW"

<CategoryWindow>:
    name: "categoryW"
    category: category
    difficulty: difficulty

    GridLayout:
        cols: 1
        Label:
            text: root.currentPlayer

        Spinner:
            id: category
            text: "Select Category"
            values: root.categories
        GridLayout:
            cols: 2
            Label:
                text: "Difficulty"
            Spinner:
                id: difficulty
                text: "Select Difficulty"
                values: ["easy", "medium", "hard"]

        Button:
            text: "Continue"
            on_release:
                root.setCategory()
                root.manager.current = "questionW"

<QuestionWindow>:
    name: "questionW"
    questionL: questionL

    GridLayout:
        cols:1

        BoxLayout:
            orientation: 'horizontal'

            Label:
                id: questionL
                text: root.questionText

            Button:
                id: changeL
                size_hint_y: None
                size_hint_x: None
                pos_hint: {'top': 1}
                size: self.texture_size
                text: "Sprache Ã¤ndern"
                on_release: root.changeLang()

        GridLayout:
            cols:2

            Button:
                id: answerA
                text:   root.answerA
                background_color: (1,0,0,1)
                background_normal: ""
                background_down:"darkgrey.jpg"
                on_release: root.answered(answer="A")

            Button:
                id: answerB
                text:   root.answerB
                background_color: (255/255, 158/255, 23/255,1)
                background_normal: ""
                background_down:"darkgrey.jpg"
                on_release: root.answered(answer="B")

            Button:
                id: answerC
                text:   root.answerC
                background_color: (0/255, 148/255, 69/255,1)
                background_normal: ""
                background_down:"darkgrey.jpg"
                on_release: root.answered(answer="C")

            Button:
                id: answerD
                text:   root.answerD
                background_color: (0/255, 25/255, 148/255,1)
                background_normal: ""
                background_down:"darkgrey.jpg"
                on_release: root.answered(answer="D")

<GameOverWindow>:
    name: "gameOverW"

    BoxLayout:
        orientation: 'vertical'

        Label:
            id: p1L
            text: root.p1

        Label:
            id: p2L
            text: root.p2

        Label:
            id: p3L
            text: root.p3